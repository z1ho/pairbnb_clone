<head>
	<title><%= @user.first_name %> <%= @user.last_name %>'s Profile</title>
</head>

<body>

	<h1><%= @user.first_name %> <%= @user.last_name %>'s Profile</h1><br>

	<div class="avatar">
		<img class="pic_image_circle" src="<%= @user.avatar %>" alt="User Profile Pic">
	</div><br />

	<div>
		<h3><%= @user.first_name %> <%= @user.last_name %></h3>

		<p><b>About <%= @user.first_name%>: </b><%= @user.about %></p>

		<p><b>Ratings: </b></p>
	</div>

	<% if @user != current_user %>
		<%= link_to "Contact Host", "#" %>
	<% else %>
		<%= link_to "Edit Profile", edit_user_path(@user) if current_user == @user %>
	<% end %>
	
</body>