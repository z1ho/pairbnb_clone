<!doctype html>
<html>
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.2.0/js/bootstrap.min.js"></script>
    <script src="http://code.jquery.com/jquery-2.1.1.min.js"></script>
</head>


<body> <!-- #took out  style="text-align: center" -->
  <header class="header">
      <div class="container">
        <div class="row">
          <div class="col-md-12">
            <div id="myCarousel" class="carousel slide" style="border-color: black;">
          
                <ol class="carousel-indicators">
                  <li data-target= "#myCarousel" data-slide-to="0" class="active"></li>
                  <li data-target= "#myCarousel" data-slide-to="1"></li>
                  <li data-target= "#myCarousel" data-slide-to="2"></li>
                </ol>

                <div class="carousel-inner">
                  <div class="item active">
                    <%= image_tag("2.jpg")%> 
                    
                    <div class= "carousel-caption">
                      <h3>Explore the World</h3>
                    </div>
                  </div> 

                  <div class="item">
                    <%= image_tag("3.jpeg")%> 
                    <div class= "carousel-caption">
                      <h3>Perfect Vacation Destinations</h3>
                      <p>Find that ideal location</p>
                    </div>
                  </div>

                  <div class="item"> 
                    <%= image_tag("4.jpeg")%> 
                    <div class= "carousel-caption">
                      <h3>Looking for a Weekend Getaway?</h3>
                      <p>Book now!</p>
                    </div>
                  </div>
                </div>

               <a class= "carousel-control left" href= "#myCarousel" data-slide= "prev"><span class= "icon-prev"></span>
               </a> 

               <a class= "carousel-control right" href= "#myCarousel" data-slide= "next"><span class= "icon-next"></span>
               </a> 

            </div>
            <% if current_user %>
            <% else %> 
            <h1>Welcome to zBnB</h1>
            <div id="clearance" class="sign-in">
		          <h2><%= t(".title") %></h2>
              <%= render partial: '/sessions/form' %>
              <%= link_to "Sign In with Facebook", "auth/facebook" %>
            </div>
            <% end %>

          </div>
        </div>
	   </div>
  </header>
</body>
</html>



      