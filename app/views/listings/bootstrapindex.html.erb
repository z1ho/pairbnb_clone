<head>
  <title>Getaways</title>
</head>

<body>
  <% if current_user %>
  <h5>Welcome back <b><%= current_user.first_name %></b>!</h5>
  <% end %>

  <h1><u>Search By</u></h1>

  <div id="tag_cloud" style="width: 100%;">
    <% tag_cloud Listing.tag_counts, %w[s m l] do |tag, css_class| %>#<%= link_to tag.name, tag_path(tag.name), class: css_class %><%= " | " %>
    <% end %>
  </div>

  <div class="listing-container">
    <div class="resume">
      <header class="page-header">
        <% @listings.each do |l| %>
        <h1 class="page-title"><%= link_to l.name, l %></h1>
        <center>
          <small> <i class="fa fa-clock-o"></i> Last Updated on: <time><%= l.updated_at %></time></small>  
       <!-- NON-USERS CANT ACCESS IT -->
          <% if @user.id == l.user_id%>
          <%= link_to "Delete Listing", listing_path(l.id), method: :delete %>
          <%= "|" %>
          <%= link_to "Edit Listing", edit_listing_path(l.id) %>
          <% else %>
          <% end %>
        </center>
      </header>
      <div class="row">
        <div class="col-xs-12 col-sm-12 col-md-offset-1 col-md-10 col-lg-offset-2 col-lg-8">
          <div class="panel panel-default">
            <div class="panel-heading resume-heading">
              <div class="row">
                <div class="col-lg-12">
                  <div class="col-xs-12 col-sm-4">
                    <figure style="margin-right: 15px;">
                      <% l.image.each do |image|%>
                      <%= image_tag image.listing_pic%>
                      <% end %>
                      
                    </figure>

                    <div class="row">
                    </div>

                  </div>

                  <div class="col-xs-12 col-sm-8">
                    <ul class="list-group">
                      <li class="list-group-item"><p><b>Hosted By: </b><%= l.user.first_name %> <%= l.user.last_name %></p></li>
                      <li class="list-group-item"><p><b>Country: </b><%= l.country %></p></li>
                      <li class="list-group-item"><p><b>City: </b><%= l.city %></p></li>
                      <li class="list-group-item"><i class="fa fa-phone"></i><b>Property Type: </b><%= l.property_type %></li>
                      <li class="list-group-item"><p><b>Hosted By: </b><%= l.user.first_name %> <%= l.user.last_name %></p></li>
                      <li class="list-group-item"><b>Price Per Stay: </b><%= l.price %></li>
                    </ul>
                  </div>
                </div>
              </div>
            </div>
            <div class="bs-callout bs-callout-danger">
              <h4>Description</h4>
              <p><%= l.description %></p>
            </div>
          </div>
        </div>
      </div>
    </div><hr>
    <% end %>
  </div>
  <div id="gap" style="padding-top: 80px">
  </div>
  
</body>

